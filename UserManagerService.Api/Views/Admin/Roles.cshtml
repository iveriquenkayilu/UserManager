
@{
    ViewData["Title"] = "Roles";
    ViewData["Section"] = "Role Management";
}

@section Scripts{
    @*<script src="assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="assets/js/custom/apps/user-management/users/list/table.js"></script>*@
    <script src="~/js/roles.js" asp-append-version="true" type="text/javascript"></script>
}
<h5>Roles</h5>

<div ng-controller="roles" ng-init="init()">
    <!--begin::Card-->
    <div class="card card-flush">
        <!--begin::Card header-->
        <div class="card-header mt-5">
            <!--begin::Card title-->
            @*<div class="card-title">

            </div>*@
            <!--end::Card title-->
            <!--begin::Card toolbar-->
            <div class="card-toolbar">
                <!--begin::Button-->
                <button type="button" class="btn btn-light-primary" ng-click="add()">
                    <!--begin::Svg Icon | path: icons/duotone/Interface/Plus-Square.svg-->
                    <span class="svg-icon svg-icon-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path opacity="0.25" fill-rule="evenodd" clip-rule="evenodd" d="M6.54184 2.36899C4.34504 2.65912 2.65912 4.34504 2.36899 6.54184C2.16953 8.05208 2 9.94127 2 12C2 14.0587 2.16953 15.9479 2.36899 17.4582C2.65912 19.655 4.34504 21.3409 6.54184 21.631C8.05208 21.8305 9.94127 22 12 22C14.0587 22 15.9479 21.8305 17.4582 21.631C19.655 21.3409 21.3409 19.655 21.631 17.4582C21.8305 15.9479 22 14.0587 22 12C22 9.94127 21.8305 8.05208 21.631 6.54184C21.3409 4.34504 19.655 2.65912 17.4582 2.36899C15.9479 2.16953 14.0587 2 12 2C9.94127 2 8.05208 2.16953 6.54184 2.36899Z" fill="#12131A" />
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 17C12.5523 17 13 16.5523 13 16V13H16C16.5523 13 17 12.5523 17 12C17 11.4477 16.5523 11 16 11H13V8C13 7.44772 12.5523 7 12 7C11.4477 7 11 7.44772 11 8V11H8C7.44772 11 7 11.4477 7 12C7 12.5523 7.44771 13 8 13H11V16C11 16.5523 11.4477 17 12 17Z" fill="#12131A" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->Add Role
                </button>
                <!--end::Button-->
            </div>
            <!--end::Card toolbar-->
        </div>
        <!--end::Card header-->
        <!--begin::Card body-->
        <div class="card-body pt-0" ng-cloak>

            <table class="table table-bordered table-striped table-hover table-checkable mx-auto align-middle table-row-dashed fs-6 gy-5" datatable="ng" dt-options="dtOptions" id="kt_table_users" ng-cloak>
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="text-center" ng-repeat="u in roles track by $index" ng-cloak>
                        <td> {{u.id}} </td>
                        <td>{{u.name}}</td>
                        <td> {{u.createdAt | date: dateFormat }} </td>
                        <th>
                            @*<a href="javascript:;" class="" ng-click="more(u.id)"><i class="fas fa-plus"> </i> </a>*@
                            <a href="javascript:;" class="" ng-click="edit(u.id)"><i class="fas fa-edit"> </i> </a>
                            <a href="javascript:;" class="" ng-click="delete(u.id)"><i class="fas fa-trash"> </i> </a>
                        </th>
                    </tr>
                </tbody>
            </table>
        </div>
        <!--end::Card body-->
    </div>

    <div class="modal fade" id="rolesModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Role Modal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" class="mt-2" id="add_request_form" enctype="multipart/form-data">
                        @*<label>Add Test Form </label>*@

                        <div class="row">
                            <div class="form-group col-md-4">
                                <label>Name </label>
                                <input class="form-control" name="Name" placeholder="Name" type="text" ng-model="requestInput.name" />
                            </div>
                            @*<div class="form-group col-md-4">
                                <label>Description </label>
                                <input class="form-control" name="French" placeholder="French" type="text" ng-model="requestInput.french" />
                            </div>*@

                        </div>
                    </form>
                </div>
                <div class="modal-footer justify-content-between">
                    @*<button type="button" ng-click="addProvider()" class="btn btn-secondary btn_modal"> Submit </button>*@
                    <button type="button" ng-click="isEdit?action(3): action(1)" class="btn btn-secondary btn_modal"> Submit </button>
                    <button type="button" class="btn btn-secondary btn_modal" data-bs-dismiss="modal" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

