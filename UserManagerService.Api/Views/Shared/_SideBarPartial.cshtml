@inject UserManagerService.Shared.Interfaces.Services.IUserContext userContext
<div class="sidebar mb-5">
    @*Sidebar user panel (optional)*@
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
            <img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
            <a asp-controller="User" asp-action="Profile" class="d-block" id="identity"> @userContext.Username </a>
        </div>
    </div>

    <!-- SidebarSearch Form -->
    <div class="form-inline mt-5">
        <div class="input-group" data-widget="sidebar-search">
            <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-sidebar">
                    <i class="fas fa-search fa-fw"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->


            <li class="nav-item">
                <a asp-controller="Interaction" asp-action="Requests" class="nav-link">
                    <i class="nav-icon fas fa-share"></i>
                    <p>
                        Requests
                        @*<span class="right badge badge-danger">New</span>*@
                    </p>
                </a>
            </li>

            @if (User.IsInRole("ADMIN"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Users">
                        <i class="nav-icon fas fa-user"></i>
                        <p>
                            Users
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Companies">
                        <i class="nav-icon fas fa-building"></i>
                        <p>
                            Companies
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Insurances">
                        <i class="nav-icon fas fa-money-check-alt"></i>
                        <p>
                            Insurances
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Providers">
                        <i class="nav-icon fas fa-hospital-user"></i>
                        <p>
                            Providers
                        </p>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Facilities">
                        <i class="nav-icon fas fa-hospital"></i>
                        <p>
                            Facilities
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="DocumentTypes">
                        <i class="nav-icon fas fa-file-alt"></i>
                        <p>
                            Document Types
                        </p>
                    </a>
                </li>

            }

            @*<li class="nav-item">
            <a asp-controller="Home" asp-action="Index" class="nav-link">
                <i class="nav-icon fas fa-users"></i>
                <p>
                    Requests
                    <span class="right badge badge-danger">New</span>
                </p>
            </a>
        </li>*@


            <li class="nav-item">
                <form class="form-inline" asp-controller="Home" asp-action="Logout" method="post" asp-route-returnUrl="@Url.Action(" Index", "Home" , new { area="" })" id="logout_form">
                    <a class="nav-link" href="javascript:;" id="logout_button">
                        <i class="nav-icon fas fa-sign-out-alt"></i>
                        <p>
                            Logout
                        </p>
                    </a>
                </form>
            </li>
        </ul>
    </nav>
    <!-- /.sidebar-menu -->
</div>